{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "outDir": "dist-server",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}
